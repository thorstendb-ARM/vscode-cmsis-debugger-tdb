{
  "name": "vscode-cmsis-debugger",
  "displayName": "Arm CMSIS Debugger",
  "description": "Run and debug embedded and IoT projects on Arm Cortex-M single or multi core devices. Connects via pyOCD to CMSIS-DAP or other GDB servers.",
  "version": "1.1.0",
  "preview": false,
  "publisher": "Arm",
  "author": "Jens Reinecke <jens.reinecke@arm.com>",
  "license": "SEE LICENSE IN LICENSE",
  "main": "dist/main.js",
  "repository": "https://github.com/Open-CMSIS-Pack/vscode-cmsis-debugger",
  "qna": "https://github.com/Open-CMSIS-Pack/vscode-cmsis-debugger/issues",
  "bugs": {
    "url": "https://github.com/Open-CMSIS-Pack/vscode-cmsis-debugger/issues"
  },
  "icon": "media/arm.png",
  "galleryBanner": {
    "color": "#333E48",
    "theme": "dark"
  },
  "engines": {
    "node": "^20.18.0",
    "yarn": "^1.22.0",
    "vscode": "^1.63.0"
  },
  "categories": [
    "Debuggers",
    "Extension Packs"
  ],
  "keywords": [
    "arm",
    "microcontroller",
    "embedded",
    "CMSIS"
  ],
  "extensionPack": [
    "eclipse-cdt.cdt-gdb-vscode",
    "eclipse-cdt.memory-inspector",
    "eclipse-cdt.peripheral-inspector",
    "ms-vscode.vscode-serial-monitor"
  ],
  "extensionKind": [
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "views": {
      "cmsis": [
        {
          "id": "cmsis-scvd-explorer",
          "name": "CMSIS SCVD Explorer",
          "icon": "$(preferences-open-settings)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cmsis",
          "title": "CMSIS",
          "icon": "$(preferences-open-settings)"
        }
      ]
    },
    "commands": [
      {
        "command": "cmsis-scvd-explorer.refreshEntry",
        "title": "Refresh CMSIS SCVD Explorer"
      },
      {
        "title": "CPU Time",
        "shortTitle": "CPU Time",
        "command": "vscode-cmsis-debugger.showCpuTimeHistory",
        "category": "Run and Debug",
        "when": "inDebugMode"
      },
      {
        "title": "Reset CPU Time",
        "shortTitle": "CPU Time",
        "command": "vscode-cmsis-debugger.resetCpuTimeHistory",
        "category": "Run and Debug",
        "when": "inDebugMode"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vscode-cmsis-debugger.showCpuTimeHistory",
          "when": "inDebugMode"
        },
        {
          "command": "vscode-cmsis-debugger.resetCpuTimeHistory",
          "when": "inDebugMode"
        }
      ]
    },
    "debuggers": [
      {
        "type": "*",
        "configurationAttributes": {
          "launch": {
            "properties": {
              "cmsis": {
                "type": "object",
                "description": "Configures CMSIS Debugger settings.",
                "additionalProperties": false,
                "properties": {
                  "cbuildRunFile": {
                    "type": "string",
                    "description": "Path to *.cbuild-run.yml debug configuration file generated with CMSIS-Toolbox."
                  },
                  "componentViewer": {
                    "type": "array",
                    "description": "List of Component Viewer (SVCD) files.",
                    "items": {
                      "type": "string"
                    },
                    "default": []
                  }
                }
              }
            }
          },
          "attach": {
            "properties": {
              "cmsis": {
                "type": "object",
                "description": "Configures CMSIS Debugger settings.",
                "additionalProperties": false,
                "properties": {
                  "cbuildRunFile": {
                    "type": "string",
                    "description": "Path to *.cbuild-run.yml debug configuration file generated with CMSIS-Toolbox."
                  }
                }
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "prepare": "yarn run build",
    "download-tools": "tsx scripts/download-tools.ts",
    "clean": "git clean -f -x ./node_modules ./dist ./coverage ./tools",
    "build": "webpack --mode production && yarn lint",
    "build:no-lint": "webpack --mode production",
    "watch": "webpack -w",
    "lint": "eslint .",
    "test": "jest --reporters=default --reporters=./node_modules/jest-html-reporter",
    "all": "yarn && yarn download-tools && yarn test",
    "package": "vsce package --yarn",
    "tpip:report": "tsx scripts/tpip-reporter --header docs/tpip-header.md docs/third-party-licenses.json TPIP.md",
    "lint:md": "markdownlint **/*.md -c ./.github/markdownlint.jsonc -i ./node_modules ./dist ./coverage ./tools",
    "check:links": "tsx scripts/check-links.ts -i ./node_modules/** -i ./.github/** -c ./.github/markdown-link-check.jsonc",
    "copyright:check": "tsx scripts/copyright-manager.ts --mode=check --include=src/**/*.ts,scripts/**/*.ts --exclude=**/node_modules/**,coverage/**,dist/**,tools/**",
    "copyright:fix": "tsx scripts/copyright-manager.ts --mode=fix --include=src/**/*.ts,scripts/**/*.ts --exclude=**/node_modules/**,coverage/**,dist/**,tools/**"
  },
  "vsce": {
    "yarn": true,
    "baseContentUrl": "https://github.com/Open-CMSIS-Pack/vscode-cmsis-debugger/blob/main/README.md"
  },
  "dependencies": {
    "yaml": "^2.8.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@open-cmsis-pack/vsce-helper": "^0.1.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.19.13",
    "@types/node-fetch": "^2.6.13",
    "@types/sax": "^1.2.7",
    "@types/vscode": "^1.63.0",
    "@types/xml2js": "^0.4.14",
    "@types/yargs": "^17.0.33",
    "@types/yarnpkg__lockfile": "^1.1.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/debugprotocol": "^1.68.0",
    "@vscode/vsce": "^3.6.0",
    "@yarnpkg/lockfile": "^1.1.0",
    "eslint": "^9.35.0",
    "eslint-plugin-security": "^3.0.1",
    "extract-zip": "^2.0.1",
    "fast-extract": "^1.7.2",
    "file-type": "^21.0.0",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3",
    "globby": "^14.1.0",
    "jest": "^30.1.3",
    "jest-html-reporter": "^4.3.0",
    "lzma-native": "8.0.6",
    "markdown-link-check": "^3.13.7",
    "markdownlint-cli": "^0.45.0",
    "minimist": "^1.2.8",
    "node-fetch": "^3.3.2",
    "octokit": "^5.0.3",
    "tempfile": "^5.0.0",
    "ts-command-line-args": "^2.5.1",
    "ts-jest": "29.4.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "8.42.0",
    "vscode-uri": "^3.1.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "yargs": "^18.0.0"
  },
  "cmsis": {
    "pyocd": "pyocd/pyOCD@0.39.0",
    "gdb": "14.3.1"
  }
}
