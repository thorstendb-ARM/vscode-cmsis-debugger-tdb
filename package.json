{
  "name": "vscode-cmsis-debugger",
  "displayName": "Arm CMSIS Debugger",
  "description": "Run and debug embedded and IoT projects on Arm Cortex-M single or multi core devices. Connects via pyOCD to CMSIS-DAP or other GDB servers.",
  "version": "0.3.1",
  "preview": true,
  "publisher": "Arm",
  "author": "Jens Reinecke <jens.reinecke@arm.com>",
  "license": "SEE LICENSE IN LICENSE",
  "main": "dist/main.js",
  "repository": "https://github.com/Open-CMSIS-Pack/vscode-cmsis-debugger",
  "qna": "https://github.com/Open-CMSIS-Pack/vscode-cmsis-debugger/issues",
  "bugs": {
    "url": "https://github.com/Open-CMSIS-Pack/vscode-cmsis-debugger/issues"
  },
  "icon": "media/arm.png",
  "galleryBanner": {
    "color": "#333E48",
    "theme": "dark"
  },
  "engines": {
    "node": "^20.18.0",
    "yarn": "^1.22.0",
    "vscode": "^1.63.0"
  },
  "categories": [
    "Debuggers",
    "Extension Packs"
  ],
  "keywords": [
    "arm",
    "microcontroller",
    "embedded",
    "CMSIS"
  ],
  "extensionPack": [
    "eclipse-cdt.cdt-gdb-vscode",
    "eclipse-cdt.memory-inspector",
    "eclipse-cdt.peripheral-inspector",
    "ms-vscode.vscode-serial-monitor"
  ],
  "extensionKind": [
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "debuggers": [
      {
        "type": "cmsis-debug-pyocd",
        "label": "CMSIS Debugger (pyOCD)",
        "initialConfigurations": [
          {
            "name": "CMSIS Debugger: pyOCD",
            "type": "gdbtarget",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${command:cmsis-csolution.getBinaryFile}",
            "gdb": "arm-none-eabi-gdb",
            "initCommands": [
              "load",
              "tbreak main"
            ],
            "target": {
              "server": "pyocd",
              "port": "3333"
            },
            "cmsis": {
              "cbuildRunFile": "${command:cmsis-csolution.getCbuildRunFile}"
            }
          }
        ],
        "configurationSnippets": [
          {
            "label": "CMSIS Debugger: pyOCD",
            "description": "CMSIS Debugger via pyOCD GDB adapter.",
            "body": {
              "name": "CMSIS Debugger: pyOCD",
              "type": "gdbtarget",
              "request": "launch",
              "cwd": "^\"\\${workspaceFolder}\"",
              "program": "^\"\\${command:cmsis-csolution.getBinaryFile}\"",
              "gdb": "arm-none-eabi-gdb",
              "initCommands": [
                "load",
                "tbreak main"
              ],
              "target": {
                "server": "pyocd",
                "port": "3333"
              },
              "cmsis": {
                "cbuildRunFile": "^\"\\${command:cmsis-csolution.getCbuildRunFile}\""
              }
            }
          }
        ]
      },
      {
        "type": "cmsis-debug-jlink",
        "label": "CMSIS Debugger (J-LINK)",
        "initialConfigurations": [
          {
            "name": "CMSIS Debugger: J-LINK",
            "type": "gdbtarget",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${command:cmsis-csolution.getBinaryFile}",
            "gdb": "arm-none-eabi-gdb",
            "initCommands": [
              "load",
              "tbreak main"
            ],
            "target": {
              "server": "JLinkGDBServer",
              "serverParameters": [
                "-device",
                "${command:cmsis-csolution.getDeviceName}",
                "-endian",
                "little",
                "-if",
                "SWD",
                "-speed",
                "auto",
                "-noir",
                "-vd",
                "-nogui",
                "-localhostonly"
              ],
              "port": "3333"
            },
            "cmsis": {
              "cbuildRunFile": "${command:cmsis-csolution.getCbuildRunFile}"
            }
          }
        ],
        "configurationSnippets": [
          {
            "label": "CMSIS Debugger: J-LINK",
            "description": "CMSIS Debugger via J-LINK GDB adapter.",
            "body": {
              "name": "CMSIS Debugger: J-LINK",
              "type": "gdbtarget",
              "request": "launch",
              "cwd": "^\"\\${workspaceFolder}\"",
              "program": "^\"\\${command:cmsis-csolution.getBinaryFile}\"",
              "gdb": "arm-none-eabi-gdb",
              "initCommands": [
                "load",
                "tbreak main"
              ],
              "target": {
                "server": "JLinkGDBServer",
                "serverParameters": [
                  "-device",
                  "^\"\\${command:cmsis-csolution.getDeviceName}\"",
                  "-endian",
                  "little",
                  "-if",
                  "SWD",
                  "-speed",
                  "auto",
                  "-noir",
                  "-vd",
                  "-nogui",
                  "-localhostonly"
                ],
                "port": "3333"
              },
              "cmsis": {
                "cbuildRunFile": "^\"\\${command:cmsis-csolution.getCbuildRunFile}\""
              }
            }
          }
        ]
      },
      {
        "type": "*",
        "configurationAttributes": {
          "launch": {
            "properties": {
              "cmsis": {
                "type": "object",
                "description": "Configures CMSIS Debugger settings.",
                "additionalProperties": false,
                "properties": {
                  "cbuildRunFile": {
                    "type": "string",
                    "description": "Path to *.cbuild-run.yml debug configuration file generated with CMSIS-Toolbox."
                  }
                }
              }
            }
          },
          "attach": {
            "properties": {
              "cmsis": {
                "type": "object",
                "description": "Configures CMSIS Debugger settings.",
                "additionalProperties": false,
                "properties": {
                  "cbuildRunFile": {
                    "type": "string",
                    "description": "Path to *.cbuild-run.yml debug configuration file generated with CMSIS-Toolbox."
                  }
                }
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "prepare": "yarn run build",
    "download-tools": "ts-node scripts/download-tools.ts",
    "clean": "git clean -f -x ./node_modules ./dist ./coverage ./tools",
    "build": "webpack --mode production && yarn lint",
    "watch": "webpack -w",
    "lint": "eslint .",
    "test": "jest",
    "package": "vsce package --yarn",
    "tpip:report": "ts-node scripts/tpip-reporter --header docs/tpip-header.md docs/third-party-licenses.json TPIP.md",
    "lint:md": "markdownlint **/*.md -c ./.github/markdownlint.jsonc -i ./node_modules ./dist ./coverage ./tools",
    "check:links": "ts-node scripts/check-links.ts -i ./node_modules/** -i ./.github/** -c ./.github/markdown-link-check.jsonc"
  },
  "vsce": {
    "yarn": true,
    "baseContentUrl": "https://github.com/Open-CMSIS-Pack/vscode-cmsis-debugger/blob/main/README.md"
  },
  "dependencies": {
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.0",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.63.0",
    "@types/yargs": "^17.0.33",
    "@types/yarnpkg__lockfile": "^1.1.9",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.34.0",
    "@vscode/vsce": "^3.5.0",
    "@yarnpkg/lockfile": "^1.1.0",
    "eslint": "^9.29.0",
    "extract-zip": "^2.0.1",
    "globby": "^14.1.0",
    "jest": "^29.7.0",
    "markdownlint-cli": "^0.45.0",
    "markdown-link-check": "^3.13.7",
    "node-fetch": "^3.3.2",
    "octokit": "^5.0.3",
    "tempfile": "^5.0.0",
    "ts-command-line-args": "^2.5.1",
    "ts-jest": "29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.34.1",
    "vscode-uri": "^3.1.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "yargs": "^18.0.0"
  },
  "cmsis": {
    "pyocd": "MatthiasHertel80/pyOCD@0.0.0-standalone-cbuild9"
  }
}
